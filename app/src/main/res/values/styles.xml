<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ButtonBg" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">#337ab7</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
